{
  "name": "xapi-openapi-docs",
  "private": true,
  "version": "0.1.0",
  "description": "OpenAPI project for generating docs from the xAPI Vietnamese specification",
  "packageManager": "pnpm@10.29.2",
  "scripts": {
    "lint": "redocly lint openapi.yaml",
    "build": "redocly build-docs openapi.yaml -o dist/index.html",
    "preview": "redocly preview-docs openapi.yaml --host 0.0.0.0 --port 8080"
  },
  "devDependencies": {
    "@redocly/cli": "^1.34.5"
  }
}
